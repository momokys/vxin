{
  "extends": "@vxin/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "vite/client"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.tsx",
    "src/**/*.ts",
    "env.d.ts",
    "histoire.setup.ts",
    "vite.config.ts"
  ]
}
